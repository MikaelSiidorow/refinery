{
	"name": "refinery",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"zero:generate": "drizzle-zero generate --config drizzle-zero.config.ts --format --output src/lib/zero/zero-schema.gen.ts",
		"zero:start": "zero-cache-dev --schema-path src/lib/zero/schema.ts",
		"screenshots": "node scripts/take-screenshots.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.547.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"@oslojs/encoding": "^1.1.0",
		"@rocicorp/zero": "^0.24.2025101500",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.16",
		"@types/node": "^24.9.1",
		"arctic": "^3.7.0",
		"bits-ui": "^2.14.1",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.5",
		"drizzle-orm": "^0.44.7",
		"drizzle-zero": "^0.15.1",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.5",
		"formsnap": "^2.0.1",
		"fuse.js": "^7.1.0",
		"globals": "^16.4.0",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.56.1",
		"postgres": "^3.4.7",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.41.4",
		"svelte-check": "^4.3.3",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.28.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.1.16",
		"temporal-polyfill": "^0.3.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"uuid": "^13.0.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.1.12",
		"vite-plugin-devtools-json": "^1.0.0",
		"zero-svelte": "^1.1.1",
		"zod": "^4.1.12"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@rocicorp/zero-sqlite3",
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"protobufjs"
		]
	},
	"dependencies": {
		"@atproto/api": "^0.17.4",
		"@fontsource-variable/fraunces": "^5.2.9",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource/geist-mono": "^5.2.7"
	}
}

{
	"name": "refinery",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && NODE_OPTIONS=--max-semi-space-size=256 eslint --cache --cache-location node_modules .",
		"lint:css": "stylelint \"src/**/*.{css,svelte}\"",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"zero:generate": "drizzle-zero generate --config drizzle-zero.config.ts --format --output src/lib/zero/zero-schema.gen.ts",
		"zero:start": "zero-cache-dev",
		"screenshots": "node scripts/take-screenshots.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@internationalized/date": "^3.10.1",
		"@lucide/svelte": "^0.562.0",
		"@node-rs/argon2": "^2.0.2",
		"@oslojs/crypto": "^1.0.1",
		"open-props": "^1.7.17",
		"@oslojs/encoding": "^1.1.0",
		"@rocicorp/zero": "^0.25.5",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/node": "^25.0.3",
		"arctic": "^3.7.0",
		"bits-ui": "^2.14.4",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"drizzle-zero": "^0.17.0",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"formsnap": "^2.0.1",
		"fuse.js": "^7.1.0",
		"globals": "^16.5.0",
		"mode-watcher": "^1.1.0",
		"playwright": "^1.57.0",
		"postgres": "^3.4.7",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"stylelint": "^16.12.0",
		"stylelint-config-standard": "^36.0.1",
		"stylelint-config-recess-order": "^5.1.1",
		"postcss-html": "^1.7.0",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"svelte-sonner": "^1.0.7",
		"sveltekit-superforms": "^2.29.1",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.1",
		"uuid": "^13.0.0",
		"vaul-svelte": "1.0.0-next.7",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-plugin-lucide-preprocess": "^1.4.6",
		"zero-svelte": "^1.2.2"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@rocicorp/zero-sqlite3",
			"esbuild"
		],
		"ignoredBuiltDependencies": [
			"protobufjs"
		],
		"overrides": {
			"esbuild@<=0.24.2": ">=0.25.0",
			"cookie@<0.7.0": ">=0.7.0",
			"validator@<13.15.20": ">=13.15.20",
			"js-yaml@>=4.0.0 <4.1.1": ">=4.1.1",
			"validator@<13.15.22": ">=13.15.22"
		}
	},
	"dependencies": {
		"@atproto/api": "^0.18.8",
		"@fontsource-variable/fraunces": "^5.2.9",
		"@fontsource-variable/inter": "^5.2.8",
		"@fontsource/geist-mono": "^5.2.7",
		"valibot": "^1.2.0"
	}
}
